<UserControl
    x:Class="AvaSty.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:AvaSty.Pages"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <TabControl
        Name="tab"
        Grid.Row="1"
        Margin="8"
        Padding="20,0,0,0"
        HorizontalAlignment="Stretch"
        TabStripPlacement="Left"
        Theme="{DynamicResource NavigationTab}">
        <TabItem Header="Binding">
            <pages:BindingSample />
        </TabItem>
        <TabItem Header="Styling">
            <pages:StyleDemo />
        </TabItem>
        <TabItem Header="Layout">
            <pages:LayoutSample />
        </TabItem>
        <TabItem Header="Template">
            <pages:TemplateSample />
        </TabItem>
    </TabControl>
</UserControl>