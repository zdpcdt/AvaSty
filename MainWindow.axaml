<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:vm="using:AvaSty.ViewModels"
        x:Class="AvaSty.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:CompileBindings="True"
        Title="AvaSty">
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <StackPanel Margin="10">
        <Button Content="{Binding ButtonText}" Command="{Binding ButtonClicked}"/>
        <TextBox Name="input" IsEnabled="False"/>
        <TextBlock IsVisible="{Binding !IsEnabled,ElementName=input}">Sorry, no can do!</TextBlock>
        <StackPanel DataContext="{Binding Content}">
            <TextBlock Text="{Binding Header}"/>
        </StackPanel>
    </StackPanel>
</Window>